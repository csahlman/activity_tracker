<%= form_tag('/sign_in', method: 'post') do %>
  
  <%= email_field :email, nil, id: "user_email" %>
  <%= password_field_tag :password, nil , id: "user_password" %>

  <%= button_tag "Sign In!", id: "form_sign_in" %>

<% end %>

<%= link_to "Forgot Your Password?", new_password_reset_path %>
<%= link_to "Resend Confirmation Instructions", new_resend_confirmation_path %>